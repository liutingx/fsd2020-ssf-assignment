{{#if showResult}}
    {{#if search}}
        <h1 class="mt-3 text-center">Returned results of {{ search }}: </h1>
    {{else}}
        <h1 class="mt-3 text-center">You have not specified a search, returning top news of "{{ category }}"</h1>
    {{/if}}
    {{#each showResult}}
        <div class="eachArticle mt-3 p-4 bg-color">
            <h2>{{ this.title }}</h2>
            <div class="row mt-4">
                <div class="col mx-auto">
                    {{#if this.imgUrl}}
                        <img src="{{ this.imgUrl }}" width=100% alt="">
                    {{else}}
                        <img src="/images/placeholder.png" width=100% alt="no image">
                    {{/if}}
                </div>
                <div class="col mx-auto">
                    <p>{{ this.summary }}</p>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <p>Date Published: {{ this.publish }}</p>
                </div>
                <div class="col d-flex justify-content-end">
                    <a href="{{ this.resultUrl }}" target="_blank">Read More</a>
                </div>
            </div>
        </div>
    {{/each}}
{{else}}
    <h2 class="text-center">Your search has returned no results!</h2>
{{/if}}